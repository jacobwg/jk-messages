source 'https://rubygems.org'

# Framework
gem 'rails', '3.2.8'

# Database
gem 'sqlite3'

# Server
gem 'thin'

# Assets
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'therubyracer', :platforms => :ruby
  gem 'uglifier', '>= 1.0.3'

  gem 'compass-rails'
  gem 'zurb-foundation'
end

# Javascript Framework
gem 'jquery-rails'

# Facebook APIs
gem 'koala'
gem 'fb_graph'

gem 'devise'
gem 'omniauth'
gem 'oauth2'
gem 'omniauth-facebook'

gem 'settingslogic'

gem 'kaminari'

group :development do
  gem 'whenever'
  gem 'mina'
end
