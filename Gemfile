source 'https://rubygems.org'

# Framework
gem 'rails', '3.2.11'

# Database
gem 'mysql2'

# Server
gem 'thin'

# Assets
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'therubyracer', :platforms => :ruby
  gem 'uglifier', '>= 1.0.3'
  gem 'less-rails'
end

# Javascript Framework
gem 'jquery-rails'

gem 'turbolinks'

# Facebook APIs
gem 'koala'
gem 'fb_graph'

gem 'devise'
gem 'omniauth'
gem 'oauth2'
gem 'omniauth-facebook'

gem 'settingslogic'

gem 'rinku', require: 'rails_rinku'

group :development do
  gem 'whenever'
  gem 'capistrano'
  gem 'sunspot_solr'
end

# Search
gem 'tire'

# Caching
gem 'dalli'
gem 'cache_digests'

gem 'jquery-ui-rails'

