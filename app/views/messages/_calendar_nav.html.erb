<%
middle = @day
first = middle - 1.month
last = middle + 1.month

handler = lambda do |day|
  if day <= @last_day && day >= Date.parse('2012-08-13')
    if @day == day
      [link_to(day.day, '/?day=' + [day.year, day.month, day.day].join('-'), class: 'currentDay')]
    else
      [link_to(day.day, '/?day=' + [day.year, day.month, day.day].join('-'))]
    end
  else
    day.day
  end
end

%>




