<%= render 'parts/banner' %>

<% if @messages.size == 0 %>
  <div class="container center">
    <div class="row">
      <div class="span12">
        <h2>There were no messages sent on <%= @day.strftime('%B %e, %Y') %></h2>
        <%= render 'pagination' %>
      </div>
    </div>
  </div>
<% else %>
  <div class="container center">
    <div class="row">
      <div class="span12">
        <h2>Messages from <%= @day.strftime('%B %e, %Y') %></h2>
        <%= render 'pagination' %>
      </div>
    </div>
  </div>


  <div class="container">
    <div class="row">
      <div class="span12">
        <div id="content">
          <%= render(@messages) %>
        </div>
      </div>
    </div>
  </div>

  <div class="container center">
    <div class="row">
      <div class="span12">
        <%= render 'pagination' %>
      </div>
    </div>
  </div>

<% end %>

<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Choose Day</h3>
  </div>
  <div class="modal-body center">
    <div class="datepicker">
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
</div>

<script type="text/javascript">
  window.defaultDate = new Date(<%= @day.year %>, <%= @day.month %> - 1, <%= @day.day %>);
  window.maxDate = new Date(<%= @last_day.year %>, <%= @last_day.month %> - 1, <%= @last_day.day %>);
</script>