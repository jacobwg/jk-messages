  <link href='http://fonts.googleapis.com/css?family=Tangerine' rel='stylesheet' type='text/css'>


	<%= stylesheet_link_tag    "application" %>

  <%= csrf_meta_tags %>

  <!-- IE Fix for HTML5 Tags -->
  <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-35810340-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  </script>
</head>
<body>

  <header class="jumbotron masthead" id="overview">
    <div class="container">
      <h1><a href="/">The J&amp;K Messages.</a></h1>
      <p class="lead">Exchanged between Jacob&nbsp;Gillespie and Kathryn&nbsp;Smith</p>
      <p>August&nbsp;13,&nbsp;2012 to <%= @last_day.strftime('%B %e, %Y').gsub(/ /, '&nbsp;').html_safe %></p>
    </div>
  </header>

  <div class="container">
    <div class="row">
      <div class="span12">
        <section>
          <ul class="nav nav-pills pull-left">
            <% if @day.prev_day < @first_day %>
              <li class="disabled"><a>&larr; Previous</a></li>
            <% else %>
              <li><%= link_to("&larr; Previous".html_safe, date_path([@day.prev_day.year, @day.prev_day.month, @day.prev_day.day].join('-'))) %></li>
            <% end %>

            <li class="active"><a><%= @day.strftime('%A') %></a></li>

            <% if @day.next_day > @last_day %>
              <li class="disabled"><a>Next &rarr;</a></li>
            <% else %>
              <li><%= link_to("Next &rarr;".html_safe, date_path([@day.next_day.year, @day.next_day.month, @day.next_day.day].join('-'))) %></li>
            <% end %>

            <li><a id="pick-day">Pick Day</a></li>
            <% if @day != @last_day %>
              <li><%= link_to 'Go to Today', :root %></li>
            <% end %>

          </ul>

          <ul class="nav nav-pills pull-right">

            <% if user_signed_in? %>
            <li class="disabled"><a>Hey, <%= current_user.name.split(' ').first %></a></li>
            <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
            <% else %>
            <li><%= link_to 'Sign In', user_omniauth_authorize_path(:facebook) %></li>
            <% end %>
          </ul>

          <form class="form-search pull-right" action="/search" method="get">
            <input type="text" class="search-query" placeholder="Search" name="q"<% if @query %>value="<%= @query %>"<% end %>>
          </form>
        </section>

        <section>
          <div class="datepicker"></div>
        </section>
      </div>
    </div>

    <%= yield %>
  </div>

  <footer class="footer">
    <div class="container">
      <p>Designed and built by <a href="https://jacobwg.com" target="_blank">Jacob</a>.</p>
      <p><strong>Current message count:</strong> <%= pluralize(Message.count, 'message') %>.</p>
      <p><strong>Current word count:</strong> <%= pluralize(Message.pluck(:body).join(' ').split.size, 'word') %>.</p>
    </div>
  </footer>

  <%= javascript_include_tag "application" %>

  <% if Rails.env.production? %>
  <script type="text/javascript">
    var GoSquared = {};
    GoSquared.acct = "GSN-599801-R";
    (function(w){
      function gs(){
        w._gstc_lt = +new Date;
        var d = document, g = d.createElement("script");
        g.type = "text/javascript";
        g.src = "//d1l6p2sc9645hc.cloudfront.net/tracker.js";
        var s = d.getElementsByTagName("script")[0];
        s.parentNode.insertBefore(g, s);
      }
      w.addEventListener ?
        w.addEventListener("load", gs, false) :
        w.attachEvent("onload", gs);
    })(window);
  </script>
  <% end %>

</body>
</html>